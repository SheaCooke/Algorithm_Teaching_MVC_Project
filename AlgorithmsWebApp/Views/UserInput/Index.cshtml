@using AlgorithmsWebApp.Models;
@using AlgorithmsWebApp.Data;
@model AlgorithmModels;


<div>
    <form method="post" asp-action="AlgorithmSelected" asp-controller="UserInput">

       
        <select required asp-for="SelectedAlgorithm">
            <option value="" disabled selected>--Select--</option>
            @foreach(var item in @Model.AlgorithmList)
            {
            <option value="@item.Text">@item.Text</option>
            }
        </select>


        <input type="submit" value="Run" />
    </form>
    
       @for(int i = ResultsDisplayedToUser.ResultsFromSession.Count - 1; i >= 0; i--) //iterate backwards to show most recent results first, avoid restructuring list each time
            {
                <hr class="dashed">
                <p>@Model.SelectedAlgorithm</p>
                <p>Input Value: @ResultsDisplayedToUser.ResultsFromSession[i].InputValue</p>
                <p>Input Collection: @ResultsDisplayedToUser.ResultsFromSession[i].InputCollection</p>
                <p>Output: @ResultsDisplayedToUser.ResultsFromSession[i].ReturnedValue</p>
                <p>Description of the @Model.SelectedAlgorithm algorithm:</P>
                <p>@ResultsDisplayedToUser.ResultsFromSession[i].Explanation</p>
                <p>Link to documentation:</P>
                <a href=@ResultsDisplayedToUser.ResultsFromSession[i].LinkToDocumentation target="_blank">Click Here</a>
            }

      
</div>



