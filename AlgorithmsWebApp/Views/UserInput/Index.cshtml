@using AlgorithmsWebApp.Models;
@using AlgorithmsWebApp.Data;
@model AlgorithmModels;


<div>
    <form method="post" asp-action="AlgorithmSelected" asp-controller="UserInput">

       
        <select required asp-for="SelectedAlgorithm">
            <option value="" disabled selected>--Select--</option>
            @foreach(var item in @Model.AlgorithmList)
            {
            <option value="@item.Text">@item.Text</option>
            }
        </select>


        <input type="submit" value="Run" />
    </form>

       @foreach (var i in ResultsDisplayedToUser.ResultsFromSession) //make into blocks with the users input followed by the a brief description and then the output 
            {
                <hr class="dashed">
                <p>@i.ReturnedValue</p>
                <p>@i.Explanation</p>
                <p>@i.LinkToDocumentation</p>


            }

</div>



